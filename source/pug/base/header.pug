              //- {
              //-   href: "#",
              //-   text: "беспроставочные дисковые щетки гнутого профиля с обжимным металлическим кольцом",
              //- }
            ]
          },
          {
            href: "trough-brushes.html",
            text: "лотковые щетки",
          },
          {
            href: "tupsy.html",
            text: "тупсы",
            //- submenu: [
            //-   {
            //-     href: "#",
            //-     text: "link"
            //-   }
