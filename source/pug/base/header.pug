mixin header(headerMod, currentPage)
  -
    var mainNavItems = [
      {
        href: "main.html",
        text: "главная",
        page: "main"
      },
      {
        href: "#",
        text: "каталог",
        page: "catalog",
        mod: "mobile-last",
        submenu: [
          {
            href: "#",
            text: "дисковые щетки",
            submenu: [
              {
                href: "disc-brushes.html",
                text: "дисковые щетки с обжимным металлическим кольцом",
              },
              {
                href: "spaceless-curved-profile-disc-brushes.html",
                text: "беспроставочные дисковые щетки прямого профиля",
              },
              {
                href: "spaceless-straight-profile-disc-brushes.html",
                text: "беспроставочные дисковые щетки гнутого профиля типа «Би-лайн»",
              },
              {
                href: "spaceless-be-line-profile-disc-brushes.html",
                text: "беспроставочные дисковые щетки гнутого профиля с обжимным металлическим кольцом",
              },

              //- {
