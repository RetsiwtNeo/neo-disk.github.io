extends ../base/layout

block variables
  - var title = "Оглавление"

block main
  style.
    .container {
      padding-top: 50px;
      padding-bottom: 50px;
    }

    h1 {
      font-size: 24px;
      line-height: 28px;
    }

    a {
      color: rgb(10, 10, 175);
    }

    li {
      font-size: 18px;
      line-height: 22px;
      margin-bottom: 7px;
    }

    img {
      width: 100%;
      max-width: 300px;
      height: auto;
      display: block;
      margin-bottom: 40px;
    }

    @media (max-width: 768px) {
      ol {
        padding-left: 20px;
      }

      ol li {
        margin-bottom: 15px;
      }

      .container {
        padding-top: 20px;
        padding-bottom: 20px;
      }
    }

  -
    var pages = [
      {
        name: "UI Kit — components.html",
        src: "components.html"
      },
      {
        name: "Главная — index.html",
        src: "index.html"
      },
      {
        name: "Партнеры — partners.html",
        src: "partners.html"
      },
      {
        name: "Дисковые щетки с обжимным металлическим кольцом — disc-brushes.html",
        src: "disc-brushes.html"
      },
      {
        name: "Беспроставочные дисковые щетки гнутого профиля с обжимным металлическим кольцом — spaceless-curved-profile-disc-brushes.html",
        src: "spaceless-curved-profile-disc-brushes.html"
      },
      {
        name: "Беспроставочные дисковые щетки из полипропилена прямого профиля — spaceless-straight-profile-disc-brushes.html",
        src: "spaceless-straight-profile-disc-brushes.html"
      },
      {
        name: "Беспроставочные дисковые щетки из полипропилена гнутого профиля типа «Би-лайн» — spaceless-be-line-profile-disc-brushes.html",
        src: "spaceless-be-line-profile-disc-brushes.html"
      },
      {
        name: "Лотковые щетки — trough-brushes.html",
        src: "trough-brushes.html"
      },
      {
        name: "Тупсы — tupsy.html",
        src: "tupsy.html"
      },
      {
        name: "Проставочные кольца — spacer-rings.html",
        src: "spacer-rings.html"
      },
      {
        name: "Полиамидная щетка — polyamide-brush.html",
        src: "polyamide-brush.html"
      },
      {
        name: "Ворс полипропиленовый — polypropylene-pile.html",
        src: "polypropylene-pile.html"
      },
      {
        name: "Стальной подкат — steel-tackle.html",
        src: "steel-tackle.html"
      }
    ]

  main.container.main-index
    img(src="https://via.placeholder.com/300x150" width="300" alt="Логотип проекта")
    h1 Список страниц и компонентов
    ol
      each page in pages
        li
          a(href= page.src)= page.name
